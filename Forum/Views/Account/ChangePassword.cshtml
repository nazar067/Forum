@model Forum.Models.ViewModels.ChangePasswordViewModel

<h2>Change Password</h2>
<form asp-action="Login" asp-controller="ChangePassword" asp-route-userId="@Model.Id" asp-antiforgery="true">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />

    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">New Password</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-outline-dark" />
    </div>
</form>